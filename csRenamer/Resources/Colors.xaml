<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- UI Colors -->
    <SolidColorBrush x:Key="Background" Color="#f3f3f3" />
    <SolidColorBrush x:Key="Button" Color="#dddddd" />
    <SolidColorBrush x:Key="ButtonBorder" Color="#c3c3c3" />
    <SolidColorBrush x:Key="ButtonHover" Color="#e9e9e9" />
    <SolidColorBrush x:Key="ButtonPressed" Color="#f0ebf1" />

    <!-- Text Colors -->
    <SolidColorBrush x:Key="MainText" Color="#1f1f1f" />
    <SolidColorBrush x:Key="SecondaryText" Color="#c3c3c3" />
    <SolidColorBrush x:Key="ThirdText" Color="#6f6f6f" />
</ResourceDictionary>