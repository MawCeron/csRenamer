<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="csRenamer.Pages.InsertDelete"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:csRenamer.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="5,10" RowDefinitions="Auto,Auto" RowSpacing="10">
        <StackPanel Orientation="Horizontal">
            <RadioButton x:Name="insertRadio" Content="Insert"
                         IsChecked="False" Checked="Radio_Checked"
                         Unchecked="Radio_Checked" VerticalAlignment="Center" GroupName="InsertDelete"/>
            <TextBox x:Name="insertTextBox" Width="305" Margin="5,0,0,0"
                     VerticalAlignment="Center" IsEnabled="False"/>
            <TextBlock Text="at position" Margin="10,0,0,0"
                       VerticalAlignment="Center"/>
            <NumberBox x:Name="insertPositionBox" Width="100" Margin="5,0,0,0"
                       Minimum="1" Value="1"
                       VerticalAlignment="Center" SpinButtonPlacementMode="Compact" IsEnabled="False"/>
            <CheckBox x:Name="atEndCheck" Content="or at the end"
                      Margin="10,0,0,0"
                      VerticalAlignment="Center" IsEnabled="False"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <RadioButton x:Name="deleteRadio" Content="Delete from"
                         IsChecked="False" Checked="Radio_Checked"
                         Unchecked="Radio_Checked"
                         VerticalAlignment="Center" GroupName="InsertDelete"/>
            <NumberBox x:Name="deletePositionBox" Width="120" Margin="5,0,0,0"
                       Minimum="1" Value="1"
                       VerticalAlignment="Center" SpinButtonPlacementMode="Compact" IsEnabled="False"/>
            <TextBlock Text="to" Margin="10,0,0,0" Width="50" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalTextAlignment="Center"/>
            <NumberBox x:Name="deleteToPositionBox" Width="120" Margin="5,0,0,0"
                       Minimum="1" Value="1"
                       VerticalAlignment="Center" SpinButtonPlacementMode="Compact" IsEnabled="False"/>
        </StackPanel>

    </Grid>
</Page>
