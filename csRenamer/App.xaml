<Application x:Class="csRenamer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:csRenamer"
             xmlns:converters="clr-namespace:csRenamer.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>        
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Styles.xaml"/>
                <ResourceDictionary Source="Resources/Icons.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:PathToIconConverter x:Key="PathToIconConverter" />
            <converters:BooleanNegationConverter x:Key="NegateBool" />
        </ResourceDictionary>       
    </Application.Resources>
    
</Application>
